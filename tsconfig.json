{
    "compilerOptions": {
        "baseUrl": "./",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "ES2020",
        "lib": [
            "esnext",
            "dom"
        ],
        "types": [
            "playwright",
            "node"
        ],
        "strict": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "**/*.ts"
    ]
}
